<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.signup.SignupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/signup_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="16dp">

        <EditText
            android:id="@+id/signup_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_border"
            android:hint="@string/signup_id"
            android:textSize="20sp"
            android:singleLine="true"
            android:maxLength="9"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/signup_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_border"
            android:hint="@string/signup_pw"
            android:textSize="20sp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/signup_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_border"
            android:hint="@string/signup_check"
            android:textSize="20sp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_border"
            android:hint="@string/signup_name"
            android:textSize="20sp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/signup_signupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="@string/signup_buttonText"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</LinearLayout>